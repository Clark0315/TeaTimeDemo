@{
}
@model List<TeaTimeDemo.Models.Category>
<partial name="_Notification" />
<div class="container">
    <div class="row pt-4 pb-3">
        <div class="col-6">
            <h2 class="text-primary">
                類別清單
            </h2>
        </div>
        <div class="col-6 text-end">
            <a asp-controller="Category" asp-action="Create" class="btn btn-primary">
                <i class="bi bi-plus-circle"></i> 新增類別
            </a>
        </div>
    </div>
    <table class="table table-bordered table-striped">
        <thead>
            <tr>
                <th>@Html.DisplayNameFor(Model => Model[0].Name)</th>
                <th>@Html.DisplayNameFor(Model => Model[0].DisplayOrder)</th>
                <th>@Html.DisplayNameFor(Model => Model[0].Description)</th>
                <th>    </th>
            </tr>
        </thead>
        <tbody>
            @foreach (var obj in Model.OrderBy(u => u.DisplayOrder))
            {
                <tr>
                    <td>@obj.Name</td>
                    <td>@obj.DisplayOrder</td>
                    <td>@obj.Description</td>
                    <td>
                        <a asp-controller="Category" asp-action="Edit" asp-route-id="@obj.Id" class="btn btn-primary btn-sm">
                            <i class="bi bi-pencil-square"></i> 編輯
                        </a>
                        <a asp-controller="Category" asp-action="Delete" asp-route-id="@obj.Id" class="btn btn-danger btn-sm">
                            <i class="bi bi-trash"></i> 刪除
						</a>
                    </td>
                </tr>
            }
        </tbody>
    </table>
</div>